{% extends 'master.twig' %}

{% block body %}
<div class="jumbotron" style="padding-bottom: 40px;">
    <div class="container text-center">
        <h1>Welcome to Movecheapr</h1>
        <p>The Kayak for Moving Trucks</p>
        <a href="{{baseUrl()}}/learn-more" class="btn btn-primary btn-lg" style="width: 200px;">Learn More</a>
    </div>
</div>

<div class="container">
    <h4 class="text-center" style="margin-bottom: 20px;">Find the best price for a moving truck by comparing them all.</h4>
    <div class="row">
        <div class="col-lg-12 text-center">
            <form id="search_form" class="form-inline" method="POST" action="{{baseUrl()}}">
              <div class="form-group">
                <label class="sr-only" for="zipcode_from">Pickup ZipCode</label>
                <input type="text" class="form-control" id="zipcode_from" name="zipcode_from" placeholder="Pickup ZipCode">
              </div>
              <div class="form-group">
                <label class="sr-only" for="zipcode_to">Drop off ZipCode</label>
                <input type="text" class="form-control" id="zipcode_to" name="zipcode_to" placeholder="Drop off ZipCode">
              </div>
              
              <div class="form-group" style="position: relative;">
                <label class="sr-only" for="date">Date</label>
                <input type="text" class="form-control" id="date" name="date" placeholder="Choose Date">
              </div>
              
              <button type="submit" class="btn btn-success">Compare Rates</button>
            </form>
            
            <div class="loader-box" style="display: none">
                <div class="lable">Comparing for you...</div>
                <div class="loader">
                    <div class="element-animation">
                    <img src="https://dl.dropboxusercontent.com/u/35259193/loader.png" width="1180" height="70";>
                    </div>
                    <div class="road"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 center-block" style="float: none;">
            <table class="table striped-table" id="results-table" style="margin-top: 30px;">
                
            </table>
        </div>
    </div>
    
</div>
<!-- /.container -->
{% endblock %}